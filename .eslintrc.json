{
  "extends": ["eslint:recommended", "airbnb", "prettier"],
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "no-extra-semi": "off",
    "no-console": "off",
    "quotes": ["error", "single"],
    "indent": [
      "error",
      2,
      {
        "CallExpression": {
          "arguments": "first"
        }
      }
    ],
    "max-len": ["error", 120, 2],
    "prettier/prettier": ["error"],
    "comma-dangle": ["error", { "functions": "ignore" }]
  }
}
