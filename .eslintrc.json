{
  "extends": "eslint:recommended",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-extra-semi": "off",
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      2
    ],
    "max-len": [
      "error",
      120,
      2
    ],
    "no-console": "off"
  }
}
